{
  "name": "main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/main/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/main/**/*.ts"]
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "cache": false,
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/main",
        "format": ["cjs"],
        "bundle": true,
        "main": "src/main.ts",
        "tsConfig": "apps/main/tsconfig.app.json",
        "assets": [
          {
            "input": "apps/main",
            "glob": "stage.development.env",
            "output": "."
          },
          {
            "glob": "**/*",
            "input": "apps/main/src/assets",
            "output": "assets"
          },
          "./README.md"
        ],
        "generatePackageJson": false,
        "esbuildConfig": "esbuild-config.js"
      },
      "configurations": {
        "development": {
          "generateLockfile": false,
          "esbuildConfig": "esbuild-config.js"
        },
        "production": {
          "generateLockfile": false,
          "esbuildConfig": "esbuild-config.js"
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "main:build",
        "runBuildTargetDependencies": true
      },
      "configurations": {
        "development": {
          "buildTarget": "main:build:development"
        },
        "production": {
          "buildTarget": "main:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
